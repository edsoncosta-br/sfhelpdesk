<% if !@requests.empty? %>

  <div class="status-line <%=color_status(params[:q_status].to_i)%>"> 
    <div class="d-flex"> 
      <div class="status-icon" ><i class="fa-solid fa-circle open-status-line <%=color_status(params[:q_status].to_i)%>"></i></div>
      <div class="status-text"> <%=status(params[:q_status].to_i)%> ( <%=@requests_size.to_s.rjust(2, "0") %> )</div>
    </div>
  </div>

  <div id="modal-place"></div>

  <div class="table-responsive">
    <table class='table table-striped table-hover table-result'>
      <thead>
        <div class="border-bottom border-secondary-subtle"></div>
      </thead>

      <tbody>
        <% @requests.each_with_index do |request, index| %>
          <tr>
            <td class="col-status align-middle">
              <i class="fa-solid fa-circle <%=color_status(request.status)%> "></i>
            </td>

            <td class="align-middle">
              <div class="first-line mb-2">
                <span class="fw-semibold"><%=request.title%></span>
                  <%#= request.content %>

                <% if request.priority %>
                  <span title="Prioridade" class="badge rounded-pill bg-style bg-priority ms-1"><i class="fa-solid fa-bolt"></i></span>
                <% end %>

                <% Methods.get_tags(request.id).each do |tag| %>
                  <span title="Tag" class="badge rounded-pill bg-style bg-tag ms-1"><%=tag.description%></span>
                <% end %>

                <% if request.mark_description.present? %>
                  <span title="Meta" class="badge rounded-pill bg-style bg-mark ms-1"><i class="fa-solid fa-rocket me-2"></i><%=request.mark_description%></span>
                <% end %>                
              </div>
              
              <div class="second-line text-muted">
                <span>
                  <span class="me-3">Id: <%=request.id.to_s.rjust(4, "0")%></span>
                  <span>Criada em <%=I18n.l(request.created_date.to_date(), format: :short).capitalize()%></span>
                  <span class="me-3">por <strong><%=request.user_created_name%></strong></span>

                  <% if request.customers_name.present? && request.requester_name.present? %>
                    <span class="me-3">Solicitante: <%=request.code.to_s.rjust(4, "0")%>-<%=request.customers_name%>/<%=request.requester_name%></span>
                  <% elsif request.customers_name.present? %>
                    <span class="me-3">Solicitante: <%=request.code.to_s.rjust(4, "0")%>-<%=request.customers_name%></span>                    
                  <% elsif request.requester_name.present? %>
                    <span class="me-3">Solicitante: <%=request.requester_name%></span>                                        
                  <% end %>

                  <% if request.user_responsible_name.present? %>
                    <span class="me-3">Resp: <strong><%=request.user_responsible_name%></strong></span>
                  <% end %>                  
                </span>                
              </div>
            </td>

            <td class="align-middle col-step">
              <span title="Status da Execução" class="badge rounded-pill <%=bg_step(request.step)%>"><%=step(request.step) %></span>            
            </td>

            <td class='align-middle text-center col-actions-two'>
              <%= link_to request_path(request,q_sys: params[:q_sys],
                                               q_status: params[:q_status],
                                               q_content: params[:q_content]), 
                                               class: 'td-actions', title: "Visualizar" do %>
                <i class="fa-solid fa-envelope-open pe-1"></i>
              <% end %>

              <%= link_to edit_request_path(request,q_sys: params[:q_sys],
                                                    q_status: params[:q_status],
                                                    q_content: params[:q_content]), 
                                                    class: 'td-actions', title: "Alterar" do %>
                <i class="fa-regular fa-pen-to-square pe-1"></i>
              <% end %>

              <a class="td-actions" href="#" title="Excluir" data-bs-toggle="modal" 
                data-bs-target="#delete<%=request.id.to_s%>"><i class="fa-regular fa-trash-can pe-1"></i></a>

            </td>
          </tr>

          <div class="modal modal-delete fade" id="delete<%=request.id.to_s%>" tabindex="-1" 
                aria-labelledby="deleteLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                
                <div class="modal-header"> <i class="fas fa-exclamation-triangle fa-2x modal-header-icon me-2"></i>
                  <h1 class="modal-title" id="deleteLabel">Confirmação</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                  Confirma a exclusão da Requisição: <br> <%= request.title %> ?
                </div>
                <div class="modal-footer actions">
                  <%= link_to 'Excluir', request_path(request,q_sys: params[:q_sys],
                                                              q_status: params[:q_status],
                                                              q_content: params[:q_content]), 
                      class:"btn btn-danger", method: :delete %>
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
              </div>
            </div>
          </div>

        <% end %>
      </tbody>
    </table>
  </div>    

  <div class="pt-3">
    <%= paginate @requests, window: Constants::PAGINATE_WINDOW, remote: true %>
  </div>   

<% else %>
  <%= render "shared/record_not_found" %>
<% end %>