<% if !@positions.empty? %>

  <div class="records text-muted text-end">
    Registros encontrados: <%=@positions_size%>
  </div>

  <div id="modal-place"></div>

  <div class="table-responsive">
    <table class='table table-bordered table-striped table-hover table-result'>
      <thead>
        <tr>
          <th scope='col'>Descrição</th>
          <th scope='col' class='text-center col-actions-two'>Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @positions.each do |position| %>
          <tr>
            <td class='align-middle'> <%= position.description %> </td>
            <td class='align-middle text-center '>
              <%= link_to edit_position_path(position, q_desc: params[:q_desc]), class: 'td-actions', title: "Alterar" do %>
                <i class="fa-regular fa-pen-to-square pe-1"></i>
              <% end %>

              <a class="td-actions" href="#" title="Excluir" data-bs-toggle="modal" 
                data-bs-target="#delete<%=position.id.to_s%>"><i class="fa-regular fa-trash-can pe-1"></i></a>

            </td>
          </tr>

          <div class="modal modal-delete fade" id="delete<%=position.id.to_s%>" tabindex="-1" 
                aria-labelledby="deleteLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                
                <div class="modal-header"> <i class="fas fa-exclamation-triangle fa-2x modal-header-icon me-2"></i>
                  <h1 class="modal-title" id="deleteLabel">Confirmação</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                  Confirma a exclusão do Cargo/Função: <br> <%= position.description %> ?
                </div>
                <div class="modal-footer actions">
                  <%= link_to 'Excluir', position_path(position, q_desc: params[:q_desc]), 
                      class:"btn btn-danger", method: :delete %>
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
              </div>
            </div>
          </div>

        <% end %>
      </tbody>
    </table>
  </div>    

  <div class="pt-3">
    <%= paginate @positions, window: Constants::PAGINATE_WINDOW, remote: true %>
  </div>   

<% else %>
  <%= render "shared/record_not_found" %>
<% end %>