document.getElementById('sub_topic_id').innerHTML = '';

var node = document.createElement("option");
node.setAttribute("value", "");

<% if !@sub_topics.empty? %>
  
  <% @sub_topics.each_with_index do |sub_topic, index| %>
    
    <% if index == 0 %>
      var item = document.createTextNode("SELECIONE..");
      node.appendChild(item);
      document.getElementById("sub_topic_id").appendChild(node);
    <%end%> 
    
    var node = document.createElement("option");
    node.setAttribute("value", <%= sub_topic.id %>);

    var item = document.createTextNode("<%=sub_topic.description%>");
    node.appendChild(item);
    document.getElementById("sub_topic_id").appendChild(node);

  <% end %>

<% else %>
  var item = document.createTextNode("SELECIONE..");
  node.appendChild(item);
  document.getElementById("sub_topic_id").appendChild(node);
<% end %>

