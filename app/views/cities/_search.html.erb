<% if !@cities.empty? %>

  <div class="records text-muted text-end">
    Registros encontrados: <%=@cities_size%>
  </div>

  <div id="modal-place"></div>

  <div class="table-responsive">
    <table class='table table-bordered table-striped table-hover table-result'>
      <thead>
        <tr>
          <th scope='col'>Nome</th>
          <th scope='col'>UF</th>
          <th scope='col'>CÃ³digo IBGE</th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td class='align-middle'> <%= city.name %> </td>
            <td class='align-middle'> <%= city.state %> </td>
            <td class='align-middle'> <%= city.ibge_code %> </td>
          </tr>        
        <% end %>
      </tbody>
    </table>
  </div>    

  <div class="pt-3 pb-3">
    <%= paginate @cities, window: Constants::PAGINATE_WINDOW, remote: false %>
  </div>   

<% else %>
  <%= render "shared/record_not_found" %>
<% end %>      
