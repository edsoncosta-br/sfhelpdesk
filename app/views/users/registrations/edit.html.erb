<%= render "shared/header" %>
<main>
  <div class="container-fluid max-container">
    <div class="page-heading"> 
      <div class="ph-left pe-3">
        <%=index_title('Meus Dados')%>
      </div>
      <div class="ph-right">
      </div>          
    </div>

    <div class="card card-size shadow">
      <div class="card-body card-body-style brd">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |form| %>
          <%= render "admins/shared/error_messages", resource: @user %>

          <div class="row">
            <div class="col-12 mb-2">
              <div class="avatar-profile d-flex justify-content-center">
                <%= user_avatar(@user.id, "img-avatar-user") %>
              </div>                              
            </div>     

            <div class="field">
              <%= form.file_field :avatar, accept: 'image/png,image/jpg,image/jpeg', id:"file-avatar", class: "d-none" %>
            </div>

            <div class="d-flex justify-content-center pb-2">
              <a href='#' id="link-avatar" class="text-center pe-3 link-change" >Trocar foto</a>
              <a href='#' id="link-avatar-delete" class="text-center ps-3 link-delete" >Excluir foto</a>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :name, class:"form-label" %>
              <%= form.text_field :name, 
                  class:"form-control", 
                  autofocus: true, disabled: true, readonly: true %>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :nick_name, class:"form-label" %>
              <%= form.text_field :nick_name, 
                  class:"form-control", 
                  autofocus: true, disabled: true, readonly: true %>
            </div>

            <div class="col-12 mb-3">
              <%= form.label :email, class:"form-label" %>
              <%= form.email_field :email, 
                  class:"form-control input-email",
                  disabled: true, readonly: true%>
            </div>                

            <div class="col-12 mb-3">
              <%= form.label :position_id, class:"form-label" %>
              <input class="form-control" disabled="disabled" readonly="readonly" 
                                          type="text" value="<%=@user.position.present? ? @user.position.description : nil%>"
                                          id="user_position_id">
            </div>

            <%= hidden_field_tag :avatar_deleted %> 
          </div>

          <div class="actions pt-3 text-end">
            <%= form.submit "Salvar", class:"btn btn-success input-btn me-1"%>
            <%= link_to 'Cancelar', requests_path, class: 'btn btn-secondary' %>            
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>