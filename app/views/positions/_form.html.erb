<%= render "shared/header" %>
<main>
  <div class="container-fluid max-container">
    <div class="page-heading"> 
      <div class="ph-left pe-3">
        <%=index_title('Cargo/Função - ' + action_message)%>
      </div>
      <div class="ph-right">
      </div>          
    </div>

    <div class="card card-size">
      <div class="card-body card-body-style brd">

        <%= form_with(model: @position ) do |form| %>
          <%= render "shared/error_messages", resource: @position %>

          <div class="row">
            <div class="col-12 mb-3">
              <%= form.label :description, class:"form-label" %>
              <%= form.text_field :description, 
                  class:"form-control #{is_invalid(@position, '_description_isempty_')}", 
                  autofocus: true, autocomplete: :off, maxlength:"30" %>
            </div>

            <%= hidden_field_tag :q_desc, params[:q_desc] %>
          </div>

          <div class="actions pt-2 text-end">
            <%= form.submit "Salvar", class:"btn btn-success input-btn me-1"%>
            <%= link_to 'Cancelar', positions_path(q_desc: params[:q_desc]), class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>