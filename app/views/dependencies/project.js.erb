<%# select usuarios tags %>

var select = document.getElementById('tag_ids');
select.innerHTML = '';

<% @tags.each_with_index do |tag, index| %>
  var option = document.createElement('option');
  option.value = <%=tag.id%>;
  option.text = "<%=tag.description%>";
  select.add(option);
<% end %>