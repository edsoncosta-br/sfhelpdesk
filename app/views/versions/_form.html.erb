<%= render "shared/header" %>
<main>
  <div class="container-fluid max-container">
    <div class="page-heading"> 
      <div class="ph-left pe-3">
        <div>VersÃµes - <%= action_message %> </div>
      </div>
      <div class="ph-right">
      </div>          
    </div>

    <div class="card card-size">
      <div class="card-body card-body-style">

        <%= form_with(model: @version ) do |form| %>
          <%= render "shared/error_messages", resource: @version %>

          <div class="row">

            <div class="col-12 mb-3">
              <%= form.label :system_id, class:"form-label"%>
              
              <% if (params[:action] == "edit") or (params[:action] == "update") %>              
                <%= select_tag :system_id, 
                                options_from_collection_for_select( System.select(:id, :description)
                                                                          .joins(:company)
                                                                          .where("company_id = ?", current_user.company.id)
                                                                    .order("unaccent(description)"),
                                                                    :id, :description, @version.system_id),
                                class:"form-control", disabled:"true" %>
              <%elsif%>
                <%= select_tag :system_id, 
                                options_from_collection_for_select( System.select(:id, :description)
                                                                          .joins(:company)
                                                                          .where("company_id = ?", current_user.company.id)
                                                                    .order("unaccent(description)"),
                                                                    :id, :description, @version.system_id),
                                include_blank: "Selecione...", 
                                class:"form-select #{is_invalid(@version, '_system_isempty_')}",
                                name:"version[system_id]",
                                autofocus: true %>
              <%end%>                                
            </div>

            <div class="col-12 mb-3">
              <%= form.label :description, class:"form-label" %>
              <%= form.text_field :description, 
                  class:"form-control #{is_invalid(@version, '_description_isempty_')}", 
                  autocomplete: :off, autofocus: true,  maxlength:"30" %>
            </div>

            <div class="col-12 col-md-6 mb-3">
              <%= form.label :due_date, class:"form-label" %>
              <%= form.date_field :due_date, class:"form-control", autocomplete: :off %>
            </div>

            <div class="col-12 col-md-6 mb-3">
              <%= form.label :release_date, class:"form-label" %>
              <%= form.date_field :release_date, class:"form-control", autocomplete: :off %>
            </div>            

            <%= hidden_field_tag :q_sys, params[:q_sys] %>
            <%= hidden_field_tag :q_desc, params[:q_desc] %>            

          </div>

          <div class="actions pt-2 text-end">
            <%= form.submit "Salvar", class:"btn btn-success me-1"%>
            <%= link_to 'Cancelar', versions_path(q_sys: params[:q_sys],
                                                  q_desc: params[:q_desc]), class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>