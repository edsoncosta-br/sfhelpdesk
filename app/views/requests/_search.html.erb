<% if !@requests.empty? %>

  <div class="status-line <%=color_status(params[:q_status].to_i)%>"> 
    <div class="d-flex"> 
      <div class="status-text"> <%=status(params[:q_status].to_i)%> ( <%=@requests_size.to_s.rjust(2, "0") %> )</div>
    </div>
  </div>

  <div id="modal-place"></div>

  <div class="table-responsive">
    <table class='table table-striped table-hover table-result'>
      <thead>
        <div class="border-bottom"></div>
      </thead>

      <tbody>
        <% @requests.each_with_index do |request, index| %>
          <tr>
            <td class="align-middle">
              <div class="first-line">
                <span>
                  <span>
                    <%= link_to request.title, request_path(request,
                                                            q_sys: params[:q_sys],
                                                            q_status: params[:q_status],
                                                            q_content: params[:q_content]), 
                                                            class: 'fw-semibold text-decoration-none link-dark me-2',
                                                            data: {bs_toggle: 'tooltip', bs_placement: "top", bs_title: "Visualizar Requisição" } %>
                  </span>

                  <span class="badge rounded-pill bg-style <%=bg_status(request.status)%> me-1"
                    data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Status da Requisição">
                    <%=status_request(request.status)%>
                  </span>

                  <% Methods.get_tags(request.id).each do |tag| %>
                    <span class="badge rounded-pill bg-style bg-tag me-1" 
                    data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Tag"><%=tag.description%></span>
                  <% end %>

                  <% if request.mark_description.present? %>
                    <span class="badge rounded-pill bg-style <%=color_mark(request.closed)%> me-1" 
                          data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="<%=mark_description(request.closed)%>">
                      <i class="fa-solid fa-flag me-1"></i>
                      <%=request.mark_description%>
                    </span>
                  <% end %>                
                </span>
              </div>
              
              <div class="second-line text-muted">
                <span>
                  <span>Criação: <%=format_date(request.created_date)%> </span>
                  <span class="me-3">por <strong><%=request.user_created_name%></strong></span>
                  <span class="me-3">Id: <%=request.id.to_s.rjust(4, "0")%></span>                  

                  <% if request.customers_name.present? && request.requester_name.present? %>
                    <span class="me-3">Solicitante: <%=request.code.to_s.rjust(4, "0")%>-<%=request.customers_name%>/<%=request.requester_name%></span>
                  <% elsif request.customers_name.present? %>
                    <span class="me-3">Solicitante: <%=request.code.to_s.rjust(4, "0")%>-<%=request.customers_name%></span>                    
                  <% elsif request.requester_name.present? %>
                    <span class="me-3">Solicitante: <%=request.requester_name%></span>                                        
                  <% end %>

                  <span class="me-3">Previsão: <%=request.dues_date.present? ? format_date(request.dues_date) : '--'%></span>
                  <span class="me-3">
                    Responsável: <strong><%=request.user_responsible_name.present? ? request.user_responsible_name : '--'%></strong>
                  </span>
                </span>
              </div>
            </td>

            <td class="align-middle col-icon text-muted">
              <% if request.any_attached? %>
                <span class="" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Anexo(s)">
                  <i class="fa-solid fa-paperclip"></i>
                  <%= request.count_attached %>
                </span>
              <% end %>
            </td>

            <td class="align-middle col-icon text-muted">
              <% if request.count_comments > 0 %>
                <span data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Comentário(s)">
                  <i class="fa-regular fa-comment"></i>
                  <%= request.count_comments %>
                </span>                  
              <% end %>
            </td>            

            <td class="align-middle col-priority">
              <% if (request.priority) and (request.status == Constants::STATUS_ABERTA[1]) %>
                <span data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Prioridade">
                  <i class="fa-solid fa-star"></i></span>
              <% end %>
            </td>


            <td class="align-middle col-step">
              <span class="badge rounded-pill <%=bg_step(request.step)%>"
                data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Execução da Requisição">
                <%=step(request.step)%>
              </span>
            </td>            
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>    

  <div class="pt-3">
    <%= paginate @requests, window: Constants::PAGINATE_WINDOW, remote: true %>
  </div>   

<% else %>
  <%= render "shared/record_not_found" %>
<% end %>