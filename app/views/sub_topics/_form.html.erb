<%= render "shared/header" %>
<main>
  <div class="container-fluid max-container">
    <div class="page-heading"> 
      <div class="ph-left pe-3">
        <div>SubTópicos - <%= action_message %> </div>
      </div>
      <div class="ph-right">
      </div>          
    </div>

    <div class="card card-size">
      <div class="card-body card-body-style">

        <%= form_with(model: @sub_topic ) do |form| %>
          <%= render "shared/error_messages", resource: @sub_topic %>

          <div class="row">
            
            <div class="col-12 mb-3">
              <label class="form-label" for="sub_topic_topic_id">Projeto</label>
              <input class="form-control" value="<%=@sub_topic.description_project%>" disabled>
            </div>

            <div class="col-12 mb-3">
              <label class="form-label" for="sub_topic_topic_id">Tópico</label>
              <input class="form-control" value="<%=@sub_topic.description_topic%>" disabled>
            </div>            

            <div class="col-12 mb-3">
              <%= form.label :description, class:"form-label" %>
              <%= form.text_field :description, 
                  class:"form-control #{is_invalid(@sub_topic, '_description_isempty_')}", 
                  autocomplete: :off, autofocus: true,  maxlength:"30" %>
            </div>

            <%= form.hidden_field :topic_id %>
            <%= form.hidden_field :description_project %>
            <%= form.hidden_field :description_topic %>

            <%= hidden_field_tag :q_sys, params[:q_sys] %>
            <%= hidden_field_tag :q_desc, params[:q_desc] %>                        

          </div>

          <div class="actions pt-2 text-end">
            <%= form.submit "Salvar", class:"btn btn-success me-1"%>
            <%= link_to 'Cancelar', topics_path(q_sys: params[:q_sys],
                                                q_desc: params[:q_desc]), class: 'btn btn-secondary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</main>